<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} - [%logger{0}] %-5level : %msg%n</pattern>
        </encoder>
    </appender>

    <root level="OFF">
        <appender-ref ref="STDOUT"/>
    </root>
    <logger name="petclinic.api" level="INFO"/>
    <logger name="org.fedex.test.common" level="INFO"/>
</configuration>
